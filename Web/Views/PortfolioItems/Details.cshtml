@model Core.Entities.PortfolioItem

@{
    ViewData["Title"] = "Details";
}
<div class="container mb-3" style="margin-top: 8em;">

    <h1>Details</h1>

    <div>
        <h4>
            @Html.DisplayFor(model => model.ProjectName)
        </h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd class="col-sm-10">
                <img src="~/img/portfolio/@Model.ImageUrl" style="max-width:170px;" class="img-thumbnail img img-fluid" asp-append-version="true" />
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-outline-dark">Back</a>
    </div>
</div>
