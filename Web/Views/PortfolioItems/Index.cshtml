@model IEnumerable<PortfolioItemCreateViewModel>

@{
    ViewData["Title"] = "Portfolio Items";
}
<style>
    .card-deck .row > div[class*='col-'] {
        display: flex;
        flex: 1 0 auto;
    }
</style>
<div class="container " style="margin-top: 8em;">
    <h1>Portfolio Items</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img class="card-img-top" src="~/img/portfolio/@item.ImageUrl" asp-append-version="true" />
                    <div class="card-body">
                        <h5 class="card-title">@item.ProjectName</h5>
                        <p class="card-text">
                            @if (item.Description.Length > 50)
                            {
                                @item.Description.Substring(0, 50)
                            }
                            else
                            {
                                @item.Description
                            }
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-Id="@item.Id"><span class="fa fa-edit"></span> Edit</a>
                        <a asp-action="Details" asp-route-Id="@item.Id" class="btn btn-secondary" ><span class="fa fa-eye"> View</span></a>
                        <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger"><span class="fa fa-trash"></span> Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
